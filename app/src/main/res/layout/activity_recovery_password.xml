<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        app:logo="@null"
        android:id="@+id/id_toolbar"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back_arrow_image"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentLeft="true"
                android:layout_width="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_arrow_black_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="重置密码"
                android:textSize="18sp"
                android:textColor="@color/colorTextMain"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:background="@null"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColorHint="#cecccc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/id_phone_edit"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="#cecccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorTextPrompt"
        android:text="此功能只支持移动号码，新密码将以短信形式发送，联通号码请联系（18603518513）修改密码"/>
    <Button
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/id_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/red_solid_background"
        android:text="重置密码"/>
</LinearLayout>