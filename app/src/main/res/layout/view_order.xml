<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_view_order"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_order_image"
            android:src="@drawable/good_default"
            android:layout_width="90dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/id_order_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_name_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="iPhone se 16GB 金色"
                android:textColor="@color/colorTextMain"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_state_text"
                android:text="正在交易中"
                android:textColor="@color/colorMain"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/id_money_text"
                android:text="金额:￥900"
                android:textColor="@color/colorTextPrompt"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_black_right"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_view_operate"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingBottom="10dp">
        <Button
            android:visibility="invisible"
            android:id="@+id/id_button_left"
            android:text="不想卖了"
            android:background="@drawable/black_stroke_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:visibility="invisible"
            android:id="@+id/id_button_center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="重新上架"
            android:background="@drawable/black_stroke_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:visibility="gone"
            android:id="@+id/id_button_right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="确认完成"
            android:textColor="@color/colorWhite"
            android:background="@drawable/red_solid_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>