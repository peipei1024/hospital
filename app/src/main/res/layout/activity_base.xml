<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAPPBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/id_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56"></FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@color/coolorLine"/>
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/id_home"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/id_home_image"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_home_select"/>
                <TextView
                    android:id="@+id/id_home_text"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="首页"
                    android:gravity="center"
                    android:textColor="@color/colorMain"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_my"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/id_my_image"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_my_unselect"/>
                <TextView
                    android:id="@+id/id_my_text"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="我的"
                    android:gravity="center"
                    android:textColor="@color/colorTextMain"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>