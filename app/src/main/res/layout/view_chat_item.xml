<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/id_view_left"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_image_left_head"
            android:src="@drawable/head"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/id_text_left"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chat_message_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能便宜点吗！我真的想买"
            android:textColor="@color/colorTextMain"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/id_view_right"
        android:layout_below="@id/id_view_left"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/id_image_right_head"
            android:layout_alignParentRight="true"
            android:src="@drawable/head"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/id_text_right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_image_right_head"
            android:layout_marginRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chat_message_background_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="能便宜点吗！我真的想买"
            android:textColor="@color/colorTextMain"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>