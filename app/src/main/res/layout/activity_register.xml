<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>
    <EditText
        android:background="@null"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="40dp"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColorHint="#cecccc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/id_phone_edit"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="#cecccc"/>
    <EditText
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:hint="密码"
        android:inputType="textPassword"
        android:background="@null"
        android:textColorHint="#cecccc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/id_password_edit"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#cecccc"/>
    <EditText
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:background="@null"
        android:textColorHint="#cecccc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/id_confimepassword_edit"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#cecccc"/>
    <Button
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/id_register_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/red_solid_background"
        android:text="注册"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorTextPrompt"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已阅读并同意以下协议,愿意创建账号"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/id_inuc_text"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="《医患交流平台使用协议》"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextMain"
        android:gravity="center"
        android:id="@+id/id_login_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="有账号？去登录"/>
    <TextView
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorTextPrompt"
        android:gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="2016@僵尸"/>
</LinearLayout>