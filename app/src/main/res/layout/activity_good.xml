<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:imagecontrol="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorAPPBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        app:logo="@null"
        android:id="@+id/id_toolbar"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back_arrow_image"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow_black_left"/>
            <TextView
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="物品详情"
                android:layout_width="0dp"
                android:layout_weight="18"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/id_share_image"
                android:paddingRight="10dp"
                android:src="@drawable/icon_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
            <ImageView
                android:id="@+id/id_more_image"
                android:paddingLeft="10dp"
                android:src="@drawable/icon_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="@color/colorTab"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/id_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp">
                    <com.js.oldmarket.view.BannerImg
                        android:id="@+id/id_banner_good_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ProgressBar
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:id="@+id/id_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/id_good_name_text"
                            android:background="@color/colorWhite"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorTextMain"
                            />
                        <LinearLayout
                            android:paddingRight="80dp"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <TextView
                                android:id="@+id/id_price_text"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorMain"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/id_oldprice_text"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorTextPrompt"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/id_newness_text"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorMain"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <TextView
                                android:id="@+id/id_place_text"
                                android:background="@color/colorWhite"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorTextMain"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <TextView
                                android:id="@+id/id_time_text"
                                android:background="@color/colorWhite"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorTextPrompt"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <TextView
                                android:id="@+id/id_end_time_text"
                                android:text="最迟交易时间"
                                android:background="@color/colorWhite"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorTextPrompt"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/id_user_head_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/id_user_name_text"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTextMain"/>
                </LinearLayout>
                <TextView
                    android:background="@color/colorWhite"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorTextPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13283619575"
                    android:id="@+id/id_phone_num_text"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/id_view_verfied"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/id_view_shcoolnum_verfied"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/icon_schoolnum_authentication"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:text="学号认证"
                            android:textColor="@color/colorTextPrompt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/id_view_weichat_verfied"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/icon_weichat_authentication"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="微信认证"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorTextPrompt"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/id_phone_view"
                        android:background="@drawable/black_stroke_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:paddingLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="28dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_phone"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="电话联系"
                            android:textColor="@color/colorTextMain"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/id_sms_view"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@drawable/black_stroke_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:paddingLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="28dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_sms"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="短信联系"
                            android:textColor="@color/colorTextMain"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/id_chat_view"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:background="@drawable/red_solid_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="聊一聊"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_orange"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="物品详情"
                        android:textColor="@color/colorTextMain"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/id_good_details_text"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorTextMain"
                    android:paddingBottom="10dp"/>
                <RelativeLayout
                    android:id="@+id/id_word_view"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:background="@color/colorWhite"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_orange"/>
                    <TextView
                        android:layout_toRightOf="@id/orange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="留言"
                        android:textColor="@color/colorTextMain"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"/>
                    <ImageView
                        android:src="@drawable/icon_arrow_black_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f7f4f4"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/id_foot"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTab"/>
            <LinearLayout
                android:id="@+id/id_tab4button"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <LinearLayout
                    android:id="@+id/id_leave_word"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_leave_word"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="留言"
                        android:textColor="@color/colorTextMain"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_view_auction"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_auction"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="出价"
                        android:textColor="@color/colorTextMain"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_collect_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_collect"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/colorTextMain"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>