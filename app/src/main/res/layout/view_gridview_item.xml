<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_view_good_item"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/id_image_pic"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/good_default"/>
        <TextView
            android:id="@+id/id_text_name"
            android:background="@color/colorWhite"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorTextMain"
            android:maxLines="2"
            android:text="实木相框摆台创意大挂墙画框"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:background="@color/colorWhite"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_text_price"
                android:paddingLeft="8dp"
                android:textColor="@color/colorMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥20"/>
            <TextView
                android:id="@+id/id_text_oldprice"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:textColor="@color/colorTextPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥20"/>
        </RelativeLayout>
</LinearLayout>