<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAPPBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        app:logo="@null"
        android:id="@+id/id_toolbar"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_back_arrow_image"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentLeft="true"
                android:layout_width="36dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_arrow_black_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="设置"
                android:textSize="18sp"
                android:textColor="@color/colorTextMain"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTab"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:visibility="gone"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/notice"
                    android:src="@drawable/icon_notice"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_toRightOf="@id/notice"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="新消息提醒"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_help_view"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/help"
                    android:src="@drawable/icon_help"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_toRightOf="@id/help"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="帮助与反馈"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_version_view"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/version"
                    android:src="@drawable/icon_version"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_toRightOf="@id/version"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="检查新版本"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_about_view"
                android:layout_marginTop="1dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/about"
                    android:src="@drawable/icon_about"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_toRightOf="@id/about"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="关于我们"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_black_right"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/id_logout_button"
            android:layout_alignParentBottom="true"
            android:text="退出当前账户"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorMain"/>
    </RelativeLayout>
</LinearLayout>